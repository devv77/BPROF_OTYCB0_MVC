<Window x:Class="ApiConsumer.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ApiConsumer"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="250" Width="250">
    <StackPanel>
        <Label Content="Username" Background="AliceBlue" Margin="10"/>
        <TextBox x:Name="tb_un" Margin="10"/>
        <Label Content="Password" Background="AliceBlue" Margin="10"/>
        <PasswordBox x:Name="tb_pw" Margin="10"/>

        <Button Content="Login" Margin="10" Click="LoginClick"/>
    </StackPanel>
</Window>
